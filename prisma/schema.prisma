// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  password String
  orders    Order[]
}

model Book {
  id        String  @id @default(uuid())
  title     String
  author    String
  isbn      String
  pages     Int
  available Boolean
  genre     String
  orders     Order[]
}

//For Records 
model Record {
id String @id @default(uuid())
title String
artist String
year Int
available Boolean
genre String

orders Order[]
}

model Order {
  id String @id @default(uuid())

  order_type ItemType

  // Relations by id
  book_id String?
  record_id String?

  user_id String

  order_date     DateTime
  delivery_date  DateTime?
  payment_method String
  comment        String?

  // Additionally, we also get a reference to the related models
  user User @relation(fields: [user_id], references: [id])
  book Book? @relation(fields: [book_id], references: [id])
  record Record? @relation(fields: [record_id], references: [id])

  // recommended indexes
  @@index([book_id])
  @@index([user_id])
  @@index([record_id])
}
enum ItemType {
  BOOK
  RECORD
}